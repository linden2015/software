" Colors
colorscheme industry
highlight ColorColumn ctermbg=darkgrey
set colorcolumn=100
set t_ut=

" Errors
set confirm

" Footer
set showcmd
set timeoutlen=1000 ttimeoutlen=0

" Searching files
set path+=**
set wildmenu

" Searching inside the current file
set smartcase
set wrapscan

" Sidebar
set number

" Whitespace
set list
set listchars=trail:~,tab:>-
set shiftwidth=4 softtabstop=4 autoindent expandtab

" Wrapping
set linebreak
